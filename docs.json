{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Rankly Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "seo": {
    "indexing": "all",
    "metatags": {
      "robots": "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1",
      "googlebot": "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1",
      "charset": "UTF-8",
      "viewport": "width=device-width, initial-scale=1.0",
      "description": "Rankly - The premier Discord server listing and discovery platform. List your server, earn credits, and grow your community.",
      "keywords": "Discord, server, ranking, promotion, credits, community, webhooks, rankly",
      "author": "Rankly",
      "google": "notranslate",
      "theme-color": "#16A34A",
      "color-scheme": "light dark",
      "canonical": "https://docs.rankly.live",
      "og:site_name": "Rankly Docs",
      "og:type": "website",
      "og:title": "Rankly Documentation - Grow Your Discord Server",
      "og:description": "Complete guide to promoting your Discord server and integrating Rankly webhooks into your bot.",
      "og:url": "https://docs.rankly.live",
      "og:image": "https://rankly.live/og-image.png",
      "apple-mobile-web-app-capable": "yes",
      "apple-mobile-web-app-status-bar-style": "black-translucent",
      "apple-mobile-web-app-title": "Rankly",
      "HandheldFriendly": "True",
      "MobileOptimized": "320"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "groups": [
          {
            "group": "Welcome",
            "pages": [
              "index",
              "quickstart"
            ]
          }
        ]
      },
      {
        "tab": "Servers",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "servers/getting-started"
            ]
          },
          {
            "group": "Credits & Monetization",
            "pages": [
              "servers/credits",
              "servers/earning-credits",
              "servers/spending-credits"
            ]
          },
          {
            "group": "Integration",
            "pages": [
              "servers/webhooks"
            ]
          }
        ]
      },
      {
        "tab": "Bots",
        "groups": [
          {
            "group": "Webhooks",
            "pages": [
              "bots/premium",
              "bots/vote"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.rankly.live",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Dashboard",
          "href": "https://rankly.live/dashboard",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@rankly.live"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Website",
      "href": "https://rankly.live"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity"
   ]
  },
  "footer": {
    "socials": {
      "discord": "https://discord.gg/MtH5PhQS33",
      "github": "https://github.com/princedotorg/mintlify-docs",
      "website": "https://rankly.live"
    }
  }
}
