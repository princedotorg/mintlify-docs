{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Rankly Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "Servers",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "servers/getting-started"
            ]
          },
          {
            "group": "Monetization",
            "pages": [
              "servers/credits",
              "servers/earning-credits",
              "servers/spending-credits",
              "servers/webhooks"
            ]
          }
        ]
      },
      {
        "tab": "Bot Integration",
        "groups": [
          {
            "group": "Webhooks",
            "pages": [
              "bots/premium",
              "bots/vote"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.rankly.live",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Dashboard",
          "href": "https://rankly.live/dashboard",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@rankly.live"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Website",
      "href": "https://rankly.live"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "discord": "https://discord.gg/MtH5PhQS33",
      "github": "https://github.com/princedotorg/mintlify-docs",
      "website": "https://rankly.live"
    }
  }
}
